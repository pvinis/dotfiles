# other
fuck() { # lazy load fuck
    unset -f fuck
    eval $(thefuck --alias)
    fuck "$@"
}

kport() {
    lsof -t -i :$1 | xargs kill
}

srt() {
	~/Source/pvinis/p0lco-shortener/node_modules/.bin/netlify-shortener "$1" "$2"
}

